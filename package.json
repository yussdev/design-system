{
  "name": "design-system",
  "version": "0.1.3",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "files": [
    "dist",
    "README.md"
  ],
  "sideEffects": false,
  "private": true,
  "scripts": {
    "start": "start-storybook -p 6006 --no-dll",
    "prebuild": "rimraf dist",
    "build": "ttsc",
    "test": "react-scripts test",
    "lint": "eslint 'src/**/*.{js,jsx,ts,tsx}' --ignore-path .gitignore",
    "format": "prettier 'src/**/*.{js,jsx,ts,tsx,css,scss,md,mdx}' --write  --ignore-path .gitignore",
    "build-storybook": "build-storybook --no-dll"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "peerDependencies": {
    "react": ">=16.13"
  },
  "dependencies": {
    "@types/styled-components": "^5.1.4",
    "polished": "^4.0.3",
    "styled-breakpoints": "^8.1.2",
    "styled-components": "^5.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@storybook/addon-actions": "^6.0.28",
    "@storybook/addon-contexts": "^5.3.21",
    "@storybook/addon-essentials": "^6.0.28",
    "@storybook/addon-links": "^6.0.28",
    "@storybook/preset-create-react-app": "^3.1.4",
    "@storybook/react": "^6.0.28",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/jest": "^26.0.15",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.53",
    "@types/react-dom": "^16.9.8",
    "@typescript-eslint/eslint-plugin": "^4.6.0",
    "@typescript-eslint/parser": "^4.6.0",
    "babel-loader": "^8.1.0",
    "copy": "^0.3.2",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-react": "^7.21.5",
    "husky": ">=4",
    "lint-staged": ">=10",
    "prettier": "2.1.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-is": "^17.0.1",
    "react-scripts": "4.0.0",
    "rimraf": "^3.0.2",
    "ttypescript": "^1.5.12",
    "typescript": "^4.0.3",
    "typescript-transform-paths": "^2.0.2",
    "web-vitals": "^0.2.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --cache --fix",
    "*.{js,jsx,ts,tsx,css,scss,md,mdx}": "prettier --write"
  }
}
